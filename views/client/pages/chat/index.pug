
extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-12
        +box-head("Chat")


    .row
      .col-12
        .chat(my-id=user.id)
          .inner-body
            each chat in chats 
              div(class=(chat.user_id == user.id ? "inner-outgoing" : "inner-incoming"))
                if(chat.user_id != user.id)
                  .inner-name #{chat.infoUser.fullName}
                .inner-content 
                  | #{chat.content}
            div(class="inner-list-typing")
          .inner-foot
            form(
              class="inner-form"
              action=""
            )
              input(
                type="text"
                placeholder="Nhập nội dung..."
                name="content"
              )
              span(class="button-icon btn btn-light mx-2") 
                img(src="https://img.icons8.com/windows/32/grinning-face.png" alt="grinning-face")
              button
                i.fa-solid.fa-paper-plane
  div(class="tooltip" role="tooltip")
    emoji-picker